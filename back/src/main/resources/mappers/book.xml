<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.book.mapper.BookMapper">

    <insert id="addBook">
        insert into book_tb
        values(0, #{title}, #{author}, #{publisher}, #{price}, #{img})
    </insert>
    <update id="updateBook">
        update book_tb
        set
            title = #{title}
            author = #{author}
            publisher = #{publisher}
            price = #{price}
            img = #{img}
        where
            id = #{id}
    </update>
    <delete id="deleteBook">
        delete from book_tb
        where
            id = #{id}
    </delete>
    <select id="bookDetail" resultType="com.book.entity.Book">
        select
            id
            title
            author
            publisher
            price
            img
        where
            id = #{id}
    </select>
</mapper>