<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.book.mapper.BookMapper">
    <resultMap id="BookResultMap" type="com.book.entity.Book">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="author" column="author"/>
        <result property="price" column="price"/>
        <result property="publisher" column="publisher"/>
        <result property="img" column="img"/>
    </resultMap>

    <insert id="addBook">
        insert into book_tb
        values(0, #{title}, #{author}, #{publisher}, #{price}, #{img})
    </insert>
    <update id="updateBook">
        update book_tb
        set
            title = #{title},
            author = #{author},
            publisher = #{publisher},
            price = #{price},
            img = #{img}
        where
            id = #{id}
    </update>
    <delete id="deleteBook">
        delete from book_tb
        where
            id = #{id}
    </delete>
    <select id="bookDetail" resultType="com.book.entity.Book">
        select
            id,
            title,
            author,
            publisher,
            price,
            img
        from
            book_tb
        where
            id = #{id}
    </select>
    <select id="searchBooks" resultMap="BookResultMap">
        SELECT
        id,
        title,
        author,
        price,
        publisher,
        img
        FROM books
        <where>
            <if test="dto.title != null and dto.title != ''">
                AND title LIKE CONCAT('%', #{dto.title}, '%')
            </if>
            <if test="dto.author != null and dto.author != ''">
                AND author LIKE CONCAT('%', #{dto.author}, '%')
            </if>
        </where>
        LIMIT #{offset}, #{dto.limit}
    </select>

    <select id="countBooks" resultType="java.lang.Integer">
        select COUNT(*)
        FROM book_tb
        <where>
            <if test="book.title != null and book.title != ''">
                AND title LIKE CONCAT('%', #{book.title}, '%')
            </if>
            <if test="book.author != null and book.author != ''">
                AND author LIKE CONCAT('%', #{book.author}, '%')
            </if>
        </where>
    </select>
    <select id="booklist" resultType="com.book.entity.Book">
        select
            id, title, author, publisher, price, img
        from
            book_tb
        limit #{limit} OFFSET #{offset}
    </select>
    <select id="isBookDuplicateCteate" resultType="java.lang.Boolean">
        SELECT EXISTS (
        SELECT 1
        FROM book_tb
        WHERE title = #{title}
        )
    </select>
    <select id="isBookDuplcateEdit" resultType="java.lang.Boolean">
        SELECT EXISTS (
        SELECT 1
        FROM book_tb
        WHERE title = #{title}
        AND id != #{id}  <!-- 현재 수정하려는 책은 제외 -->
        )
    </select>
</mapper>