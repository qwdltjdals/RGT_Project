<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.book.mapper.BookMapper">

    <insert id="addBook">
        insert into book_tb
        values(0, #{title}, #{author}, #{publisher}, #{price}, #{img})
    </insert>
    <update id="updateBook">
        update book_tb
        set
            title = #{title},
            author = #{author},
            publisher = #{publisher},
            price = #{price},
            img = #{img}
        where
            id = #{id}
    </update>
    <delete id="deleteBook">
        delete from book_tb
        where
            id = #{id}
    </delete>
    <select id="bookDetail" resultType="com.book.entity.Book">
        select
            id,
            title,
            author,
            publisher,
            price,
            img
        from
            book_tb
        where
            id = #{id}
    </select>
    <select id="searchBooks" resultType="com.book.entity.Book">
        select *
        FROM book_tb
        <where>
            <if test="dto.title != null and dto.title != ''">
                title LIKE CONCAT('%', #{dto.title}, '%')
            </if>
            <if test="dto.author != null and dto.author != ''">
                and author LIKE CONCAT('%', #{dto.author}, '%')
            </if>
        </where>
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="countBooks" resultType="java.lang.Integer">
        select COUNT(*)
        FROM book_tb
        <where>
            <if test="book.title != null and book.title != ''">
                AND title LIKE CONCAT('%', #{book.title}, '%')
            </if>
            <if test="book.author != null and book.author != ''">
                AND author LIKE CONCAT('%', #{book.author}, '%')
            </if>
        </where>
    </select>
    <select id="booklist" resultType="com.book.entity.Book">
        select
            id, title, author, publisher, price, img
        from
            book_tb
        limit #{limit} OFFSET #{offset}
    </select>
    <select id="isBookDuplicate" resultType="java.lang.Boolean">
        SELECT EXISTS (
        SELECT 1
        FROM book_tb
        WHERE title = #{title}
        )
    </select>
</mapper>